---
layout: layouts/base.njk
title: Join Job Club
description: Complete your profile to join the NJIT Job Club community
eleventyNavigation:
  key: Onboarding
---

<div class="min-h-screen section-padding" style="background: linear-gradient(135deg, var(--primary-bg) 0%, var(--bg) 50%, var(--secondary-bg) 100%); padding-top: 100px;">
  <div class="container max-w-3xl">
    <!-- Header -->
    <div class="text-center mb-12 animate-fade-in">
      <h1 class="text-5xl font-bold mb-4" style="font-family: 'Google Sans', sans-serif; color: var(--text);">
        Welcome to Job Club
      </h1>
      <p class="text-xl" style="color: var(--text); opacity: 0.7;">
        Complete your profile to get started on your career journey
      </p>
    </div>

    <!-- Onboarding Form -->
    <div class="card animate-slide-up">
      <form id="onboardingForm" class="space-y-material">
        
        <!-- Personal Information Section -->
        <div class="pb-6" style="border-bottom: 1px solid rgba(0,0,0,0.08);">
          <h2 class="text-2xl font-bold mb-6" style="font-family: 'Google Sans', sans-serif; color: var(--text);">
            Personal Information
          </h2>
          
          <!-- Name -->
          <div class="mb-6">
            <label for="name" class="form-label">
              Full Name <span style="color: var(--primary);">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="form-input"
              placeholder="John Doe"
            />
          </div>

          <!-- Email -->
          <div class="mb-6">
            <label for="email" class="form-label">
              Email Address <span style="color: var(--primary);">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="form-input"
              placeholder="john.doe@njit.edu"
            />
          </div>
        </div>

        <!-- Academic Information Section -->
        <div class="pb-6" style="border-bottom: 1px solid rgba(0,0,0,0.08);">
          <h2 class="text-2xl font-bold mb-6" style="font-family: 'Google Sans', sans-serif; color: var(--text);">
            Academic Information
          </h2>
          
          <!-- Major -->
          <div class="mb-6">
            <label for="major" class="form-label">
              Major <span style="color: var(--primary);">*</span>
            </label>
            <input
              type="text"
              id="major"
              name="major"
              required
              class="form-input"
              placeholder="Computer Science"
            />
          </div>

          <!-- Graduation Year -->
          <div class="mb-6">
            <label for="gradYear" class="form-label">
              Expected Graduation Year <span style="color: var(--primary);">*</span>
            </label>
            <select
              id="gradYear"
              name="gradYear"
              required
              class="form-select"
            >
              <option value="">Select year...</option>
              <option value="2025">2025</option>
              <option value="2026">2026</option>
              <option value="2027">2027</option>
              <option value="2028">2028</option>
              <option value="2029">2029</option>
            </select>
          </div>
        </div>

        <!-- Professional Links Section -->
        <div class="pb-6" style="border-bottom: 1px solid rgba(0,0,0,0.08);">
          <h2 class="text-2xl font-bold mb-6" style="font-family: 'Google Sans', sans-serif; color: var(--text);">
            Professional Links
          </h2>
          
          <!-- LinkedIn -->
          <div class="mb-6">
            <label for="linkedin" class="form-label">
              LinkedIn Profile <span style="color: var(--primary);">*</span>
            </label>
            <input
              type="url"
              id="linkedin"
              name="linkedin"
              required
              class="form-input"
              placeholder="https://linkedin.com/in/yourprofile"
            />
          </div>

          <!-- GitHub -->
          <div class="mb-6">
            <label for="github" class="form-label">
              GitHub Profile <span style="color: var(--primary);">*</span>
            </label>
            <input
              type="url"
              id="github"
              name="github"
              required
              class="form-input"
              placeholder="https://github.com/yourusername"
            />
          </div>

          <!-- Personal Website -->
          <div class="mb-6">
            <label for="website" class="form-label">
              Personal Website <span style="color: var(--primary);">*</span>
            </label>
            <input
              type="url"
              id="website"
              name="website"
              required
              class="form-input"
              placeholder="https://yourportfolio.com"
            />
          </div>

          <!-- Calendly -->
          <div class="mb-6">
            <label for="calendly" class="form-label">
              Calendly Link <span style="color: var(--primary);">*</span>
            </label>
            <input
              type="url"
              id="calendly"
              name="calendly"
              required
              class="form-input"
              placeholder="https://calendly.com/yourusername"
            />
          </div>
        </div>

        <!-- Career Goal Section -->
        <div class="pb-6">
          <h2 class="text-2xl font-bold mb-6" style="font-family: 'Google Sans', sans-serif; color: var(--text);">
            Career Goal
          </h2>
          
          <div class="mb-6">
            <label for="careerGoal" class="form-label">
              What's your career goal? <span style="color: var(--primary);">*</span>
            </label>
            <textarea
              id="careerGoal"
              name="careerGoal"
              required
              rows="5"
              class="form-textarea"
              placeholder="Tell us about your career aspirations and what you hope to achieve..."
            ></textarea>
          </div>
        </div>

        <!-- Error Message -->
        <div id="errorMessage" class="hidden" style="background-color: #FFEBEE; border: 1px solid #EF5350; color: #C62828; padding: 1rem; border-radius: 12px;">
          <div class="flex items-center gap-2">
            <span class="material-icons-round">error</span>
            <p class="font-medium">Please fill in all required fields correctly.</p>
          </div>
        </div>

        <!-- Success Message -->
        <div id="successMessage" class="hidden" style="background-color: #E8F5E9; border: 1px solid #66BB6A; color: #2E7D32; padding: 1rem; border-radius: 12px;">
          <div class="flex items-center gap-2">
            <span class="material-icons-round">check_circle</span>
            <p class="font-medium">Profile submitted successfully! Welcome to Job Club.</p>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-6">
          <button
            type="submit"
            class="btn btn-primary w-full text-lg py-4"
          >
            Complete Profile
          </button>
        </div>
      </form>
    </div>

    <!-- Footer Note -->
    <p class="text-center text-sm mt-8" style="color: var(--text); opacity: 0.7;">
      Already have an account? <a href="/" class="font-medium hover:underline" style="color: var(--primary);">Return to home</a>
    </p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('onboardingForm');
    const errorMessage = document.getElementById('errorMessage');
    const successMessage = document.getElementById('successMessage');

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Hide previous messages
      errorMessage.classList.add('hidden');
      successMessage.classList.add('hidden');

      // Get form data
      const formData = {
        name: document.getElementById('name').value.trim(),
        email: document.getElementById('email').value.trim(),
        major: document.getElementById('major').value.trim(),
        gradYear: document.getElementById('gradYear').value,
        linkedin: document.getElementById('linkedin').value.trim(),
        github: document.getElementById('github').value.trim(),
        website: document.getElementById('website').value.trim(),
        calendly: document.getElementById('calendly').value.trim(),
        careerGoal: document.getElementById('careerGoal').value.trim()
      };

      // Validate all fields are filled
      const allFieldsFilled = Object.values(formData).every(value => value !== '');
      
      if (!allFieldsFilled) {
        errorMessage.classList.remove('hidden');
        errorMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        return;
      }

      // URL validation for professional links
      const urlFields = ['linkedin', 'github', 'website', 'calendly'];
      const validUrls = urlFields.every(field => {
        try {
          new URL(formData[field]);
          return true;
        } catch {
          return false;
        }
      });

      if (!validUrls) {
        errorMessage.textContent = 'Please enter valid URLs for all professional links.';
        errorMessage.classList.remove('hidden');
        errorMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        return;
      }

      // Store data in localStorage
      localStorage.setItem('jobClubProfile', JSON.stringify(formData));
      
      // Show success message
      successMessage.classList.remove('hidden');
      successMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

      // Log to console (in production, this would be an API call)
      console.log('Profile submitted:', formData);

      // Redirect after 2 seconds
      setTimeout(() => {
        window.location.href = '/';
      }, 2000);
    });

    // Real-time URL validation
    const urlInputs = ['linkedin', 'github', 'website', 'calendly'];
    urlInputs.forEach(inputId => {
      const input = document.getElementById(inputId);
      input.addEventListener('blur', function() {
        if (this.value.trim() !== '') {
          try {
            new URL(this.value);
            this.classList.remove('border-red-500');
            this.classList.add('border-green-500');
          } catch {
            this.classList.remove('border-green-500');
            this.classList.add('border-red-500');
          }
        }
      });
    });
  });
</script>

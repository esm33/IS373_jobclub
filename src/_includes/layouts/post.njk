---
layout: layouts/base.njk
---

{# Breadcrumb Schema for Better Search Display #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "{{ '/' | absoluteUrl(site.url) }}"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "{{ '/blog/' | absoluteUrl(site.url) }}"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "{{ title }}",
      "item": "{{ page.url | absoluteUrl(site.url) }}"
    }
  ]
}
</script>

{# Enhanced BlogPosting Schema with Keywords and Article Section #}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ title }}",
    "description": "{{ description or title }}"{% if keywords %},
    "keywords": "{{ keywords }}"{% endif %}{% if tags and tags[1] %},
    "articleSection": "{{ tags[1] }}"{% endif %},
    "author": {
      "@type": "Person",
      "name": "{{ site.author }}"
    },
    "datePublished": "{{ date | dateToISO }}",
    "dateModified": "{{ date | dateToISO }}",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ page.url | absoluteUrl(site.url) }}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{ site.title }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ '/favicon.svg' | absoluteUrl(site.url) }}"
      }
    }{% if image %},
    "image": "{{ image | absoluteUrl(site.url) }}"
    {% endif %}
  }
</script>

<article style="padding: clamp(60px, 10vw, 100px) 1.5rem;">
  <div style="max-width: 900px; margin: 0 auto;">
    
    {# Header #}
    <header style="margin-bottom: 3rem;">
      {% if tags and tags | length > 1 %}
      <div style="margin-bottom: 1.5rem;">
        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
          {% for tag in tags %}{% if tag != "blog" %}
          <span style="background-color: rgba(103, 80, 164, 0.1); color: var(--md-primary); padding: 0.375rem 0.75rem; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; border-radius: 6px;">
            {{ tag | upper }}
          </span>
          {% endif %}{% endfor %}
        </div>
      </div>
      {% endif %}
      
      <h1 class="font-bold" style="font-family: 'Google Sans', sans-serif; font-size: clamp(2rem, 5vw, 3.5rem); line-height: 1.1; letter-spacing: -0.02em; margin-bottom: 1.5rem; color: #1a1a1a;">
        {{ title }}
      </h1>
      
      <div style="display: flex; align-items: center; gap: 2rem; margin-bottom: 2rem; flex-wrap: wrap;">
        <div>
          <div style="font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; color: #999; margin-bottom: 0.25rem;">Published</div>
          <time datetime="{{ date | dateToISO }}" style="font-size: 0.95rem; font-weight: 600; color: #666;">
            {{ date | readableDate }}
          </time>
        </div>
      </div>
      
      {% if description %}
      <p style="font-size: 1.125rem; line-height: 1.6; color: #666; max-width: 70ch; margin-bottom: 0;">
        {{ description }}
      </p>
      {% endif %}
    </header>

    {# Divider #}
    <div style="height: 1px; background: #e0e0e0; margin: 2.5rem 0;"></div>

    {# Main content #}
    <div style="font-size: 1.0625rem; line-height: 1.75; color: #333; max-width: 70ch;">
      {{ content | safe }}
    </div>

    {# Social Sharing Component #}
    {% include "components/social-share.njk" %}

    {# Navigation footer #}
    {% if collections.blog %}
    {% set previousPost = collections.blog | getPreviousCollectionItem(page) %}
    {% set nextPost = collections.blog | getNextCollectionItem(page) %}
    {% if previousPost or nextPost %}
    <footer style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid #e0e0e0;">
      <nav style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2rem; margin-bottom: 2rem;" aria-label="Post navigation">
        {% if previousPost %}
        <div style="padding: 1.5rem; border-radius: 12px; border: 1px solid #e0e0e0; background: white;">
          <p style="font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; color: #999; margin-bottom: 0.75rem;">← Previous Article</p>
          <a href="{{ previousPost.url }}" style="font-weight: 600; font-size: 1.05rem; color: var(--md-primary); text-decoration: none;">
            {{ previousPost.data.title }}
          </a>
        </div>
        {% else %}
        <div></div>
        {% endif %}
        {% if nextPost %}
        <div style="padding: 1.5rem; border-radius: 12px; border: 1px solid #e0e0e0; background: white;">
          <p style="font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; color: #999; margin-bottom: 0.75rem;">Next Article →</p>
          <a href="{{ nextPost.url }}" style="font-weight: 600; font-size: 1.05rem; color: var(--md-primary); text-decoration: none;">
            {{ nextPost.data.title }}
          </a>
        </div>
        {% endif %}
      </nav>
      
      {# Back to blog link #}
      <a href="/blog/" style="display: inline-flex; align-items: center; justify-content: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: var(--md-primary); color: white; font-weight: 600; border-radius: 8px; text-decoration: none; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.05em; border: none; cursor: pointer;">
        ← Back to Articles
      </a>
    </footer>
    {% endif %}
    {% endif %}

  </div>
</article>

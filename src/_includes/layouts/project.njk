---
layout: layouts/base.njk
---

<article style="padding: clamp(60px, 10vw, 100px) 1.5rem;">
  <div style="max-width: 900px; margin: 0 auto;">
    
    {# Header with metadata #}
    <header style="margin-bottom: 3rem;">
      {% if technologies or status %}
      <div style="display: flex; flex-wrap: wrap; gap: 1.5rem; margin-bottom: 2rem;">
        {% if technologies %}
        <div>
          <div style="font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; color: #999; margin-bottom: 0.5rem;">Technologies</div>
          <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
            {% for tech in technologies %}
            <span style="background-color: rgba(103, 80, 164, 0.1); color: var(--md-primary); padding: 0.375rem 0.75rem; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; border-radius: 6px;">
              {{ tech }}
            </span>
            {% endfor %}
          </div>
        </div>
        {% endif %}
        {% if status %}
        <div>
          <div style="font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; color: #999; margin-bottom: 0.5rem;">Status</div>
          <span style="background-color: var(--md-primary); color: white; padding: 0.375rem 0.75rem; font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; border-radius: 6px;">
            {{ status }}
          </span>
        </div>
        {% endif %}
      </div>
      {% endif %}
      
      <h1 class="font-bold" style="font-family: 'Google Sans', sans-serif; font-size: clamp(2rem, 5vw, 3.5rem); line-height: 1.1; letter-spacing: -0.02em; margin-bottom: 1.5rem; color: #1a1a1a;">
        {{ title }}
      </h1>
      
      {% if description %}
      <p style="font-size: 1.125rem; line-height: 1.6; color: #666; max-width: 70ch; margin-bottom: 0;">
        {{ description }}
      </p>
      {% endif %}
    </header>

    {# Featured image #}
    {% if image %}
    <div style="margin: 3rem 0; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);">
      <img src="{{ image }}" alt="{{ title }}" loading="lazy" style="width: 100%; height: auto; display: block;" />
    </div>
    {% endif %}

    {# Main content #}
    <div style="font-size: 1.0625rem; line-height: 1.75; color: #333; max-width: 70ch;">
      {{ content | safe }}
    </div>

    {# Social Sharing Component #}
    {% include "components/social-share.njk" %}

    {# Action buttons footer #}
    <footer style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid #e0e0e0;">
      <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
        {% if github %}
        <a href="{{ github }}" target="_blank" rel="noopener noreferrer" style="display: inline-flex; align-items: center; justify-content: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: var(--md-primary); color: white; font-weight: 600; border-radius: 8px; text-decoration: none; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.05em; border: none; cursor: pointer;">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View Code
        </a>
        {% endif %}
        {% if demo %}
        <a href="{{ demo }}" target="_blank" rel="noopener noreferrer" style="display: inline-flex; align-items: center; justify-content: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: var(--md-secondary); color: white; font-weight: 600; border-radius: 8px; text-decoration: none; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.05em; border: none; cursor: pointer;">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z"/>
          </svg>
          Live Demo
        </a>
        {% endif %}
        <a href="/projects/" style="display: inline-flex; align-items: center; justify-content: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: #f0f0f0; color: #333; font-weight: 600; border-radius: 8px; text-decoration: none; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.05em; border: none; cursor: pointer;">
          ‚Üê Back to Projects
        </a>
      </div>
    </footer>

  </div>
</article>

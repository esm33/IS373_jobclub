<section class="section-padding" style="background-color: #FFFFFF; padding-top: 120px; padding-bottom: 120px;">
  <div class="container">
    {# Section Header #}
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 rounded-full" style="background: rgba(103, 80, 164, 0.1);">
        <span class="material-icons-round" style="font-size: 1.125rem; color: var(--primary);">article</span>
        <span style="font-size: 0.9375rem; font-weight: 500; color: var(--primary);">Latest Insights</span>
      </div>
      <h2 class="font-bold mb-6" style="font-family: 'Google Sans', sans-serif; color: var(--text); font-size: clamp(2.5rem, 6vw, 3.5rem); line-height: 1.1; letter-spacing: -0.01em;">
        Recent Posts
      </h2>
      <p class="mx-auto" style="color: var(--text); opacity: 0.7; max-width: 700px; font-size: clamp(1.125rem, 2vw, 1.25rem); line-height: 1.6;">
        Honest conversations about AI, education, and the future of work.
      </p>
    </div>
    
    {% if collections.blog and collections.blog.length > 0 %}
    {# Blog Cards Grid #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {% for post in collections.blog | limit(3) %}
      <article class="card group" style="padding: 2rem; border-radius: 24px; cursor: pointer;">
        <time datetime="{{ post.date | dateToISO }}" class="text-xs uppercase tracking-wide font-semibold mb-4 block" style="color: var(--primary);">
          {{ post.date | readableDate }}
        </time>
        <h3 class="font-bold mb-3 group-hover:text-primary transition-colors" style="font-family: 'Google Sans', sans-serif; color: var(--text); font-size: 1.25rem; line-height: 1.3;">
          {{ post.data.title }}
        </h3>
        <p class="mb-6" style="color: var(--text); opacity: 0.7; line-height: 1.6; font-size: 0.9375rem;">
          {{ post.data.description or post.data.excerpt or "Read more to discover insights..." }}
        </p>
        <a href="{{ post.url }}" class="inline-flex items-center gap-2 font-medium transition-all group-hover:gap-3" style="color: var(--primary); font-size: 0.9375rem;">
          <span>Read More</span>
          <span class="material-icons-round" style="font-size: 1.125rem;">arrow_forward</span>
        </a>
      </article>
      {% endfor %}
    </div>
    
    {# View All Button #}
    <div class="text-center mt-16">
      <a href="/blog/" class="btn btn-outlined inline-flex items-center gap-2" style="padding: 1rem 2.5rem; font-size: 1rem; border-radius: 100px; border-width: 2px;">
        <span>View All Posts</span>
        <span class="material-icons-round" style="font-size: 1.25rem;">arrow_forward</span>
      </a>
    </div>
    {% else %}
    <div class="text-center py-12">
      <p style="color: var(--text); opacity: 0.6;">No blog posts yet. Check back soon!</p>
    </div>
    {% endif %}
  </div>
</section>

---
layout: layouts/base.njk
title: Blog
description: Articles, tutorials, and insights about web development
pagination:
  data: collections.blog
  size: 10
  alias: posts
---

{% import "components/card.njk" as card %}

<section style="padding: 120px 0 80px; background: linear-gradient(135deg, rgba(227, 195, 255, 0.3) 0%, rgba(255, 251, 255, 1) 25%, rgba(224, 242, 254, 0.4) 50%, rgba(255, 245, 245, 0.3) 75%, rgba(255, 251, 255, 1) 100%);">
  <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 24px;">
    {# Material Design 3 Header #}
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 rounded-full" style="background: rgba(103, 80, 164, 0.1); backdrop-filter: blur(10px);">
        <span class="material-icons-round" style="font-size: 1.125rem; color: var(--primary);">article</span>
        <span style="font-size: 0.9375rem; font-weight: 500; color: var(--primary);">Blog & Articles</span>
      </div>
      <h1 class="font-bold mb-6" style="font-family: 'Google Sans', sans-serif; color: #5E35B1; font-size: clamp(2.5rem, 5vw, 3.5rem); line-height: 1.1; letter-spacing: -0.02em;">{{ title }}</h1>
      <p style="color: var(--text); opacity: 0.7; max-width: 700px; margin: 0 auto; font-size: clamp(1.125rem, 2vw, 1.25rem); line-height: 1.6;">{{ description }}</p>
    </div>
    
  </div>
</section>

<section style="padding: 64px 0 96px; background-color: #FEFBFF;">
  <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 24px;">
    {% if posts.length > 0 %}
    {# Material Design 3 Card Grid #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">{% for post in posts %}
      {# Blog Card #}
      <article style="
        background: var(--md-surface);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.3), 0 1px 3px 1px rgba(0, 0, 0, 0.15);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        height: 100%;
      " onmouseover="this.style.transform='translateY(-4px)'; this.style.boxShadow='0 4px 8px 0 rgba(0, 0, 0, 0.3), 0 6px 12px 4px rgba(0, 0, 0, 0.15)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 1px 2px 0 rgba(0, 0, 0, 0.3), 0 1px 3px 1px rgba(0, 0, 0, 0.15)'">
        <div style="padding: 24px; flex: 1; display: flex; flex-direction: column;">
          <time datetime="{{ post.data.date | dateToISO }}" style="font-size: 0.875rem; font-weight: 500; color: var(--primary); margin-bottom: 12px; display: block;">
            {{ post.data.date | readableDate }}
          </time>
          <h2 style="font-family: 'Google Sans', sans-serif; font-size: 1.375rem; font-weight: 700; line-height: 1.3; margin-bottom: 12px; flex: 1;">
            <a href="{{ post.url }}" style="color: var(--text); text-decoration: none; transition: color 0.2s;" onmouseover="this.style.color='#6750A4'" onmouseout="this.style.color='var(--text)'">{{ post.data.title }}</a>
          </h2>
          {% if post.data.description %}
          <p style="color: var(--text); opacity: 0.7; font-size: 0.9375rem; line-height: 1.6; margin-bottom: 16px;">{{ post.data.description | truncate(120) }}</p>
          {% endif %}
          <a href="{{ post.url }}" style="
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--primary);
            font-weight: 500;
            font-size: 0.875rem;
            text-decoration: none;
            padding: 8px 0;
            transition: gap 0.2s;
          " onmouseover="this.style.gap='12px'" onmouseout="this.style.gap='8px'">
            <span>Read Article</span>
            <span class="material-icons-round" style="font-size: 1.125rem;">arrow_forward</span>
          </a>
        </div>
      </article>
    {% endfor %}</div>

    {% if pagination.pages.length > 1 %}
    {# Swiss pagination #}
    <div class="swiss-divider my-12"></div>
    <nav class="swiss-grid" aria-label="Blog pagination">
      <div class="swiss-col-12">
        <ul class="flex justify-end items-center gap-3">
          {% if pagination.previousPageLink %}
          <li>
            <a
              href="{{ pagination.previousPageLink }}"
              class="btn-swiss"
              aria-label="Previous page"
            >
              ← PREVIOUS
            </a>
          </li>
          {% endif %}
          {% for pageEntry in pagination.pages %}
          <li>
            <a
              href="{{ pagination.hrefs[ loop.index0 ] }}"
              class="btn-swiss {% if page.url == pagination.hrefs[ loop.index0 ] %}btn-swiss-primary{% endif %}"
              aria-label="Page {{ loop.index }}"
              {% if page.url == pagination.hrefs[ loop.index0 ] %}aria-current="page"{% endif %}
            >
              {{ loop.index }}
            </a>
          </li>
          {% endfor %}
          {% if pagination.nextPageLink %}
          <li>
            <a
              href="{{ pagination.nextPageLink }}"
              class="btn-swiss"
              aria-label="Next page"
            >
              NEXT →
            </a>
          </li>
          {% endif %}
        </ul>
      </div>
    </nav>
    {% endif %}
    {% else %}
    {# Swiss empty state #}
    <div class="py-16" style="border: 2px solid var(--swiss-gray-300);">
      <div class="swiss-grid">
        <div class="swiss-col-8 swiss-col-start-3">
          <p class="text-sm font-bold uppercase tracking-wider mb-4" style="color: var(--swiss-gray-600);">NO ARTICLES YET</p>
          <h2 class="font-bold mb-4" style="font-size: var(--fluid-h3);">Check Back Later</h2>
          <p style="color: var(--swiss-gray-700);">New insightful articles and tutorials coming soon.</p>
        </div>
      </div>
    </div>
    {% endif %}
  </div>
</section>

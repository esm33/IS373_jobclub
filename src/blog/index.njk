---
layout: layouts/base.njk
title: Blog
description: Articles, tutorials, and insights about web development
pagination:
  data: collections.blog
  size: 10
  alias: posts
---

{% import "components/card.njk" as card %}

<section style="padding: clamp(80px, 15vw, 120px) 1.5rem clamp(60px, 10vw, 80px);">
  <div style="max-width: 1200px; margin: 0 auto;">
    {# Material Design header #}
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 rounded-full" style="background: rgba(103, 80, 164, 0.1);">
        <span class="material-icons-round" style="font-size: 1.125rem; color: var(--primary);">article</span>
        <span style="font-size: 0.9375rem; font-weight: 500; color: var(--primary);">ARTICLES</span>
      </div>
      <h1 class="font-bold mb-4" style="font-family: 'Google Sans', sans-serif; font-size: clamp(2rem, 5vw, 3rem); line-height: 1.1; letter-spacing: -0.02em; color: var(--text);">{{ title }}</h1>
      <p style="font-size: clamp(1rem, 2vw, 1.25rem); color: var(--text); opacity: 0.7; max-width: 60ch; margin: 0 auto;">{{ description }}</p>
    </div>
    
    {% if posts.length > 0 %}
    {# Material Design card grid #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">{% for post in posts %}
      {# Article card #}
      <article class="card" style="padding: 1.5rem; border-radius: 16px; border: 1px solid rgba(0, 0, 0, 0.08); box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04); transition: all 0.3s; background: white;">
        <time datetime="{{ post.data.date | dateToISO }}" class="text-xs font-semibold uppercase tracking-wider mb-3 block" style="color: var(--primary);">
          {{ post.data.date | readableDate }}
        </time>
        
        <h2 class="font-bold mb-3" style="font-size: clamp(1.125rem, 2vw, 1.25rem); line-height: 1.3; color: var(--text);">
          <a href="{{ post.url }}" style="text-decoration: none; color: inherit;">{{ post.data.title }}</a>
        </h2>
        
        {% if post.data.description %}
        <p class="mb-4" style="color: var(--text); opacity: 0.7; font-size: 0.875rem; line-height: 1.6;">{{ post.data.description }}</p>
        {% endif %}
        
        <a href="{{ post.url }}" class="inline-flex items-center gap-2 font-semibold text-sm" style="color: var(--primary); margin-top: auto;">
          <span>Read Article</span>
          <span class="material-icons-round" style="font-size: 1.125rem;">arrow_forward</span>
        </a>
      </article>
    {% endfor %}</div>

    {% if pagination.pages.length > 1 %}
    {# Material Design pagination #}
    <div class="mt-12" style="border-top: 1px solid rgba(0, 0, 0, 0.08); padding-top: 2rem;">
    <nav aria-label="Blog pagination">
      <ul class="flex flex-wrap justify-center items-center gap-3">
        {% if pagination.previousPageLink %}
        <li>
          <a
            href="{{ pagination.previousPageLink }}"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full font-semibold text-sm"
            style="background: white; border: 2px solid rgba(103, 80, 164, 0.2); color: var(--primary);"
            aria-label="Previous page"
          >
            <span class="material-icons-round" style="font-size: 1.125rem;">arrow_back</span>
            <span>Previous</span>
          </a>
        </li>
        {% endif %}
        {% for pageEntry in pagination.pages %}
        <li>
          <a
            href="{{ pagination.hrefs[ loop.index0 ] }}"
            class="inline-flex items-center justify-center w-10 h-10 rounded-full font-semibold text-sm"
            style="{% if page.url == pagination.hrefs[ loop.index0 ] %}background: var(--primary); color: white;{% else %}background: white; border: 2px solid rgba(103, 80, 164, 0.2); color: var(--primary);{% endif %}"
            aria-label="Page {{ loop.index }}"
            {% if page.url == pagination.hrefs[ loop.index0 ] %}aria-current="page"{% endif %}
          >
            {{ loop.index }}
          </a>
        </li>
        {% endfor %}
        {% if pagination.nextPageLink %}
        <li>
          <a
            href="{{ pagination.nextPageLink }}"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full font-semibold text-sm"
            style="background: white; border: 2px solid rgba(103, 80, 164, 0.2); color: var(--primary);"
            aria-label="Next page"
          >
            <span>Next</span>
            <span class="material-icons-round" style="font-size: 1.125rem;">arrow_forward</span>
          </a>
        </li>
        {% endif %}
      </ul>
    </nav>
    </div>
    {% endif %}
    {% else %}
    {# Empty state #}
    <div class="text-center py-16" style="border: 2px solid rgba(0, 0, 0, 0.08); border-radius: 16px; background: white;">
      <span class="material-icons-round mb-4" style="font-size: 3rem; color: var(--primary); opacity: 0.5; display: block;">article</span>
      <h2 class="font-bold mb-4" style="font-size: clamp(1.5rem, 3vw, 2rem); color: var(--text);">No Articles Yet</h2>
      <p style="color: var(--text); opacity: 0.7;">New insightful articles and tutorials coming soon.</p>
    </div>
    {% endif %}
  </div>
</section>

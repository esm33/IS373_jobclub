            </div>
            
            <!-- Tags - Material Design Assist Chips -->
            {% if event.tags and event.tags.length > 0 %}
            <div style="display: flex; flex-wrap: wrap; gap: 8px; margin-bottom: 16px;">
              {% for tag in event.tags | head(3) %}
              <span style="background: var(--bg); color: var(--text); opacity: 0.87; padding: 4px 8px; border-radius: 8px; font-size: 0.6875rem; line-height: 1.45; letter-spacing: 0.1px; font-weight: 500; border: 1px solid var(--border);">
                {{ tag }}
              </span>
              {% endfor %}
            </div>
            {% endif %}
            
            <!-- Material Design 3 Buttons -->
            <div style="display: flex; gap: 8px;">
              <a href="/events/{{ event.slug }}/" class="event-btn event-btn-filled" style="flex: 1; background: var(--primary); color: white; padding: 10px 24px; border-radius: 20px; text-align: center; font-weight: 500; font-size: 0.875rem; line-height: 1.43; letter-spacing: 0.1px; text-decoration: none; transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1); box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.3), 0 1px 3px 1px rgba(0, 0, 0, 0.15);">

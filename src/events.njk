              <a href="{{ event.registrationLink }}" target="_blank" class="event-btn event-btn-outlined" style="background: transparent; color: var(--primary); border: 1px solid var(--primary); padding: 10px 24px; border-radius: 20px; font-weight: 500; font-size: 0.875rem; line-height: 1.43; letter-spacing: 0.1px; text-decoration: none; transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);">

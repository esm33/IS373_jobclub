<script>
  // Event Filtering, Search, and Analytics
  document.addEventListener('DOMContentLoaded', function() {
    // Track page view
    if (window.analytics) {
      window.analytics.trackEventsPageView();
    }
    
    const filterButtons = document.querySelectorAll('.filter-chip');
    const eventsGrid = document.getElementById('eventsGrid');
    const pastEventsGrid = document.getElementById('pastEventsGrid');
    const pastEventsSection = document.getElementById('pastEventsSection');
    const noEventsMessage = document.getElementById('noEventsMessage');
    const searchInput = document.getElementById('eventSearch');
    const togglePastButton = document.getElementById('togglePastEvents');
    
    let currentFilter = 'all';
    let currentSearch = '';
    let pastEventsVisible = false;
    let upcomingCards = [];
    let pastCards = [];
    
    // Separate events into upcoming and past
    const now = new Date();
    const allEventCards = document.querySelectorAll('.event-card');
    
    allEventCards.forEach(card => {
      const eventDate = new Date(card.getAttribute('data-date'));
      
      if (eventDate >= now) {
        // Upcoming event - keep in main grid
        upcomingCards.push(card);
      } else {
        // Past event - move to past events grid
        pastCards.push(card);
        card.remove(); // Remove from main grid
        
        // Style as past event
        card.classList.add('past-event');
        card.style.opacity = '0.8';
        
        // Update badge styling
        const badge = card.querySelector('.event-type-badge');
        if (badge) {
          badge.style.background = 'var(--text)';
          badge.style.opacity = '0.3';
          badge.style.color = 'var(--bg)';
        }
        
        // Add completed badge
        const badgeContainer = card.querySelector('[style*="padding: 1.5rem 1.5rem 0"]');
        if (badgeContainer && !badgeContainer.querySelector('.completed-badge')) {
          const completedBadge = document.createElement('span');
          completedBadge.className = 'completed-badge';
          completedBadge.style.cssText = 'background: var(--text); opacity: 0.2; color: var(--bg); padding: 0.5rem 1rem; border-radius: 100px; font-size: 0.875rem; font-weight: 600; display: inline-block; margin-left: 0.5rem;';
          completedBadge.textContent = '‚úì Completed';
          badgeContainer.appendChild(completedBadge);
        }
        
        // Append to past events grid
        pastEventsGrid.appendChild(card);
      }
    });
    
    // Show past events section only if there are past events
    if (pastCards.length > 0) {
      pastEventsSection.style.display = 'block';
    }
    
    // Function to apply all filters
    function applyFilters() {
      let visibleCount = 0;
      
      // Filter upcoming events
      upcomingCards.forEach(card => {
        const eventType = card.getAttribute('data-event-type');
        const title = card.getAttribute('data-title') || '';
        const description = card.getAttribute('data-description') || '';
        const searchText = (title + ' ' + description).toLowerCase();
        
        const matchesFilter = currentFilter === 'all' || eventType === currentFilter;
        const matchesSearch = searchText.includes(currentSearch);
        
        if (matchesFilter && matchesSearch) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });
      
      // Filter past events if visible
      if (pastEventsVisible && pastCards.length > 0) {
        pastCards.forEach(card => {
          const eventType = card.getAttribute('data-event-type');
          const title = card.getAttribute('data-title') || '';
          const description = card.getAttribute('data-description') || '';
          const searchText = (title + ' ' + description).toLowerCase();
          
          const matchesFilter = currentFilter === 'all' || eventType === currentFilter;
          const matchesSearch = searchText.includes(currentSearch);
          
          if (matchesFilter && matchesSearch) {
            card.style.display = 'block';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });
      }
      
      // Show/hide empty state
      if (noEventsMessage) {
        noEventsMessage.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    }
    
    // Event type filter buttons
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Update active state
        filterButtons.forEach(btn => {
          btn.classList.remove('active');
          // Reset to inactive style - white background with border
          btn.style.background = 'white';
          btn.style.color = 'var(--primary)';
          btn.style.border = '2px solid rgba(103, 80, 164, 0.2)';
          btn.style.boxShadow = 'none';
        });
        button.classList.add('active');
        
        // Apply active style - gradient background
        button.style.background = 'linear-gradient(135deg, #6750A4 0%, #9575CD 100%)';
        button.style.color = 'white';
        button.style.border = 'none';
        button.style.boxShadow = '0 2px 8px rgba(103, 80, 164, 0.25)';
        
        // Get filter value
        currentFilter = button.getAttribute('data-filter');
        
        // Apply all filters
        applyFilters();
        
        // Track filter usage
        if (window.analytics) {
          const visibleCount = [...upcomingCards, ...pastCards].filter(card => card.style.display !== 'none').length;
          window.analytics.trackEventFilter(currentFilter, visibleCount);
        }
      });
    });
    
    // Search functionality
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        currentSearch = e.target.value.toLowerCase().trim();
        applyFilters();
      });
      
      // Placeholder animation
      searchInput.addEventListener('focus', () => {
        searchInput.style.background = 'rgba(255, 255, 255, 0.3)';
        searchInput.style.borderColor = 'white';
      });
      
      searchInput.addEventListener('blur', () => {
        searchInput.style.background = 'rgba(255, 255, 255, 0.2)';
        searchInput.style.borderColor = 'rgba(255, 255, 255, 0.3)';
      });
    }
    
    // Toggle past events
    if (togglePastButton && pastEventsGrid) {
      togglePastButton.addEventListener('click', () => {
        pastEventsVisible = !pastEventsVisible;
        pastEventsGrid.style.display = pastEventsVisible ? 'grid' : 'none';
        
        const buttonText = togglePastButton.querySelector('span:first-child');
        const buttonIcon = togglePastButton.querySelector('.material-icons-round');
        
        if (pastEventsVisible) {
          buttonText.textContent = 'Hide Past Events';
          buttonIcon.textContent = 'expand_less';
        } else {
          buttonText.textContent = 'Show Past Events';
          buttonIcon.textContent = 'expand_more';
        }
        
        // Apply filters to past events when shown
        if (pastEventsVisible) {
          applyFilters();
        }
      });
    }
    
    // Track "Learn More" clicks
    document.querySelectorAll('a[href^="/events/"]').forEach(link => {
      // Only track links to event detail pages, not the main events page
      if (link.getAttribute('href') !== '/events/' && link.textContent.includes('Learn More')) {
        link.addEventListener('click', function(e) {
          const card = this.closest('.event-card');
          if (card && window.analytics) {
            const eventType = card.getAttribute('data-event-type');
            const eventTitle = card.querySelector('h2').textContent.trim();
            const eventSlug = this.getAttribute('href').replace('/events/', '').replace('/', '');
            
            window.analytics.trackEventLearnMore(eventSlug, eventTitle, eventType);
          }
        });
      }
    });
    
    // Track registration clicks
    document.querySelectorAll('a[target="_blank"]').forEach(link => {
      if (link.textContent.includes('Register')) {
        link.addEventListener('click', function(e) {
          const card = this.closest('.event-card');
          if (card && window.analytics) {
            const eventType = card.getAttribute('data-event-type');
            const eventTitle = card.querySelector('h2').textContent.trim();
            const eventSlug = card.querySelector('a[href^="/events/"]').getAttribute('href').replace('/events/', '').replace('/', '');
            const registrationLink = this.getAttribute('href');
            
            window.analytics.trackEventRegistrationClick(eventSlug, eventTitle, eventType, registrationLink);
          }
        });
      }
    });
  });
</script>

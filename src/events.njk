          <span style="font-size: 16px;">üíª</span>
          Hack Nights
        </button>
      </div>
    </div>
  </section>
  
  <!-- Events Listing Section -->
  <section style="padding: clamp(60px, 10vw, 80px) 1.5rem clamp(80px, 12vw, 120px); background-color: #FEFBFF;">
    <div class="container">
      {% if events and events.length > 0 %}
      
      <!-- Section Header matching homepage pattern -->
      <div class="text-center mb-12">
        <h2 class="font-bold mb-4" style="font-family: 'Google Sans', sans-serif; color: var(--text); font-size: clamp(2rem, 4vw, 2.5rem); line-height: 1.1; letter-spacing: -0.01em;">
          Upcoming Events
        </h2>
        <p style="color: var(--text); opacity: 0.7; max-width: 600px; margin: 0 auto; font-size: 1.125rem; line-height: 1.6;">
          Find the perfect event to advance your career and expand your network
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12" id="eventsGrid">
        {% for event in events %}
        <article class="event-card" data-event-type="{{ event.eventType }}" data-title="{{ event.title | lower }}" data-description="{{ event.description | lower }}" data-date="{{ event.date }}" data-slug="{{ event.slug }}" style="background: var(--bg-secondary); border-radius: 12px; overflow: hidden; transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1); border: 1px solid var(--border); box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);">
